</div>
</section>

{% schema %}
  {
    "name": "FAQs",
    "settings": [
      {
        "type": "text",
        "id": "cat_1",
        "label": "FAQ Category 1"
      },
      {
        "type": "text",
        "id": "cat_2",
        "label": "FAQ Category 2"
      },
      {
        "type": "text",
        "id": "cat_3",
        "label": "FAQ Category 3"
      },
      {
        "type": "text",
        "id": "cat_4",
        "label": "FAQ Category 4"
      },

      {
        "type": "text",
        "id": "cat_5",
        "label": "FAQ Category 5"
      },
      {
        "type": "text",
        "id": "cat_6",
        "label": "FAQ Category 6"
      }
  ],
    "blocks": [

      {
        "type": "question",
        "name": "QnA",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Question"
          },
          {
            "type": "richtext",
            "id": "answer",
            "label": "Answer"
          },
          {
           "type":      "select",
