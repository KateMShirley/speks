

<section class="product-hero product-hero__unblocks">
  <div class="image-with-text__text">
    {% if section.settings.title != blank %}
      <h2 class="h3">{{ section.settings.title | escape }}</h2>
    {% endif %}
  </div>

  <div class="image-with-text__image">
    {% if section.settings.image != blank %}
      {% include 'responsive-image' with
        image: section.settings.image,
        max_width: 1000,
        max_height: 1000
      %}
    {% else %}
      <!-- {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }} -->
    {% endif %}
    <div class="diagrams speks-slider speks-slider__blue">
    <div class="diagram diagram__1">
      <h6>14 hidden magnets in each block.</h6>
    </div>
    <div class="diagram diagram__2">
      <h6>designer approved, multi-color combos.</h6>
    </div>
    <div class="diagram diagram__3">
      <h6>satisfyingly smooth, soft-touch finish.</h6>
    </div>
  </div>
</div>
</section>

{% schema %}
  {
    "name": "Speks Product Hero",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Product Hero"
      }
    ],
    "presets": [
      {
        "name": "Speks Product Hero",
        "category": "Image"
      }
    ]
  }
{% endschema %}
